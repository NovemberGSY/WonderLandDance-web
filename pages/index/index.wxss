/* pages/index/index.wxss */
.container {
    padding-bottom: 120rpx; /* 增加底部间距 */
    padding-top: 20rpx;
  }
  
  /* 新增横幅样式 */
  .banner-container {
    padding: 20rpx;
    background: #fff;
  }
  
  .banner-img {
    width: 100%;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .header {
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    padding: 6rpx 0 4rpx 0;
    background-color: #f8f8f8;
  }
  
  .course-list {
    padding: 0 8rpx;
  }
  
  .course-list-scroll {
    max-height: 56vh;
    min-height: 200rpx;
    margin-bottom: 24rpx;
    border-radius: 18rpx;
    box-shadow: 0 2rpx 12rpx rgba(119,41,172,0.04);
    background: #faf8fc;
    overflow: hidden;
    transition: box-shadow 0.2s;
  }
  
  .course-item {
    width: 100%;
    margin: 0 auto 24rpx auto;
    border-radius: 18rpx;
    box-shadow: 0 6rpx 18rpx rgba(119,41,172,0.08);
    padding: 28rpx 20rpx;
    background: #fff;
    transition: box-shadow 0.2s, transform 0.2s;
  }
  .course-item:last-child {
    margin-bottom: 0;
  }
  .course-item:active {
    box-shadow: 0 8rpx 24rpx rgba(119,41,172,0.12);
    transform: scale(0.98);
  }
  
  .time-teacher {
    margin-bottom: 20rpx;
  }
  
  .time {
    font-size: 32rpx;
    font-weight: 500;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .type {
    font-size: 28rpx;
    color: #666;
  }
  
  .status {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .reserved {
    font-size: 24rpx;
    color: #999;
  }
  
  .btn {
    background: #7729ac;
    color: white;
    font-size: 28rpx;
    padding: 0 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    margin: 0;
  }
  
  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    display: flex;
    background: white;
    border-top: 1rpx solid #eee;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
  }
  
  .tab-item.active {
    color: #7729ac;
  }

/* 轮播图样式 */
.banner {
  width: 92vw;
  height: 240rpx;
  margin: 8rpx auto 24rpx auto;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}
.banner-image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  border-radius: 16rpx;
}

/* 一周课程表样式 */
.week-schedule {
  margin: 0 0 32rpx 0;
  padding: 0 24rpx;
}
.week-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.week-title {
  font-size: 32rpx;
  font-weight: bold;
}
.week-date {
  font-size: 24rpx;
  color: #999;
}
.week-days {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 8rpx;
}
.day-item {
  display: inline-block;
  width: 90rpx;
  margin-right: 16rpx;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 12rpx;
  background: #f6f6f6;
  color: #333;
  transition: background 0.2s, color 0.2s;
}
.day-item.active {
  background: #7729ac;
  color: #fff;
  font-weight: bold;
}
.day-name {
  font-size: 26rpx;
  display: block;
}
.day-date {
  font-size: 22rpx;
  color: #888;
  display: block;
}