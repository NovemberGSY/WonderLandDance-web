/* pages/index/index.wxss */
.container {
    padding-bottom: 120rpx; /* 增加底部间距 */
  }
  
  /* 新增横幅样式 */
  .banner-container {
    padding: 20rpx;
    background: #fff;
  }
  
  .banner-img {
    width: 100%;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .header {
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    padding: 30rpx 0;
    background-color: #f8f8f8;
  }
  
  .course-list {
    padding: 20rpx;
  }
  
  .course-item {
    background: white;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .time-teacher {
    margin-bottom: 20rpx;
  }
  
  .time {
    font-size: 32rpx;
    font-weight: 500;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .type {
    font-size: 28rpx;
    color: #666;
  }
  
  .status {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .reserved {
    font-size: 24rpx;
    color: #999;
  }
  
  .btn {
    background: #07c160;
    color: white;
    font-size: 28rpx;
    padding: 0 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    margin: 0;
  }
  
  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    display: flex;
    background: white;
    border-top: 1rpx solid #eee;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
  }
  
  .tab-item.active {
    color: #07c160;
  }