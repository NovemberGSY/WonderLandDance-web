.my-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f6ff 0%, #f3e9ff 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}
.profile-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(119,41,172,0.10);
  padding: 48rpx 36rpx 36rpx 36rpx;
  width: 90vw;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(119,41,172,0.10);
  margin-bottom: 16rpx;
}
.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #7729ac;
}
.info-section {
  width: 100%;
}
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0e6fa;
}
.info-item:last-child {
  border-bottom: none;
}
.label {
  font-size: 28rpx;
  color: #888;
}
.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
} 